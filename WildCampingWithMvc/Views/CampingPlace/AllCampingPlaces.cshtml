@model WildCampingWithMvc.Models.CampingPlace.MultipleCampingPlacesViewModel
@{
    ViewBag.Title = "Всички";
}

<div class="form-control">
    @using (Ajax.BeginForm("FilteredCampingPlaces", new { }, new AjaxOptions()
    {
        HttpMethod = "Post",
        UpdateTargetId = "campingPlacesContainer",
        InsertionMode = InsertionMode.Replace,
    }, new { id = "ajaxForm" }))
    {
        <label for="searchTerm">@GlobalResources.TextSearchByName</label>
        <input type="text" name="searchTerm" />
    }
</div>

<div id="campingPlacesContainer" class="row container">
    <h2 class="text-center">@GlobalResources.TextAllCampingPlaces</h2>

    @Html.Partial("_MultipleCampingPlacesPartial", Model)
</div>

@Scripts.Render("~/bundles/custom")