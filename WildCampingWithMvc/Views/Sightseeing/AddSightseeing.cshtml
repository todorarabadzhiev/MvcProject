@model WildCampingWithMvc.Models.Sightseeing.AddSightseeingViewModel
@{
    ViewBag.Title = GlobalResources.TextAddSightseeing;
}

<h2 class="text-center">@ViewBag.Title.</h2>

@using (Html.BeginForm("AddSightseeing", "Sightseeing", FormMethod.Post, new { @class = "form-horizontal", role = "form", enctype = "multipart/form-data" }))
{
    Html.RenderPartial("_EditSightseeing", Model);

    <div class="form-group">
        <div class="col-md-offset-4 col-md-4">
            <input type="submit" class="btn btn-block" value=@GlobalResources.TextAdd />
        </div>
    </div>
}

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
    @Scripts.Render("~/bundles/category")
}